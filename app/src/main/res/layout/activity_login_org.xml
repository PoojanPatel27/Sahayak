<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginOrg">



    <ImageView
        android:id="@+id/loginImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_login"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_below="@id/loginImg"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#F5F5F5">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/loginRel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progBarLogin"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/RegisterTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Login Organization"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:layout_gravity="center"/>


                <EditText
                    android:id="@+id/nameEtReg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/RegisterTv"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:hint="NGO Name"
                    android:visibility="gone"
                    android:paddingLeft="20dp"
                    android:drawablePadding="10dp"
                    android:background="@drawable/custom_edittext"/>

                <EditText
                    android:id="@+id/categoryEtLogin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/mobileNoEtLogin"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:hint="NGO Category"
                    android:visibility="gone"
                    android:paddingLeft="20dp"
                    android:drawablePadding="10dp"
                    android:background="@drawable/custom_edittext"/>

                <EditText
                    android:id="@+id/mobileNoEtLogin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/nameEtReg"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:hint="Contact No"
                    android:visibility="gone"
                    android:paddingLeft="20dp"
                    android:drawablePadding="10dp"
                    android:background="@drawable/custom_edittext"/>

                <EditText
                    android:id="@+id/passwordLoginorg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/emailEtloginorg"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:hint="Password"
                    android:paddingLeft="20dp"
                    android:drawableLeft="@drawable/ic_lock_black"
                    android:drawablePadding="10dp"
                    android:background="@drawable/custom_edittext"/>

                <EditText
                    android:id="@+id/emailEtloginorg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/categoryEtLogin"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:hint="Email"
                    android:drawableLeft="@drawable/ic_email_black"
                    android:drawablePadding="10dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/custom_edittext"/>

                <EditText
                    android:id="@+id/addressEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/passwordLoginorg"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:hint="Address"
                    android:visibility="gone"
                    android:paddingLeft="20dp"
                    android:background="@drawable/custom_edittext"/>

                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/passwordLoginorg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="30dp"
                    android:text="Login"/>


            </RelativeLayout>

        </ScrollView>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/noaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="120dp"/>

    <TextView
        android:id="@+id/registerTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not registered yet?"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"/>

    <TextView
        android:id="@+id/clickHeretv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here"
        android:textColor="#2A58FF"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="90dp"
        android:layout_toRightOf="@id/noaccount"/>

</RelativeLayout>