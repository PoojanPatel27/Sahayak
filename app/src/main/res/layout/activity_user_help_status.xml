<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserHelpStatus">


    <TextView
        android:id="@+id/titleHelpStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help Status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/helpStatusBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleHelpStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#ffe73a"
        android:text="In Progress"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:clickable="false"/>

    <TextView
        android:id="@+id/statusTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In Progress..."
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_below="@id/helpStatusBtn"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/msgUidTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message UID Test"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_below="@id/statusTV"
        android:textColor="@color/black"/>





</RelativeLayout>