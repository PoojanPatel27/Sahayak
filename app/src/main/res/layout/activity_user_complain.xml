<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserComplain">

<TextView
    android:id="@+id/RegisterTitleTv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Register Complain"
    android:textSize="26sp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:textColor="@color/black"
    android:textStyle="bold"/>

    <LinearLayout
        android:layout_below="@id/RegisterTitleTv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nameComp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="50dp"
            android:hint="Name"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_person"
            android:paddingLeft="20dp"/>

        <EditText
            android:id="@+id/contactComp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:hint="contact no"
            android:paddingLeft="20dp"/>

        <EditText
            android:id="@+id/ProblemDescComp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/custom_edittext"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_problem"
            android:drawablePadding="10dp"
            android:hint="Enter your complain"
            android:paddingLeft="20dp"/>

        <EditText
            android:id="@+id/locationComp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_add_location"
            android:drawablePadding="10dp"
            android:hint="Location"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/autoLocationReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Click here get location Automatically"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Experties"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spinnerComp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="150dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>



        <Button
            android:id="@+id/submitBtnComp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Submit"/>








    </LinearLayout>


    

</RelativeLayout>